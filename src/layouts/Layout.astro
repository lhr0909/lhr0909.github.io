---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

interface Props {
  locale: string;
}

const { locale } = Astro.props as Props;
---

<!doctype html>
<html lang={locale}>
  <head>
    <BaseHead title="Home" description={SITE_DESCRIPTION} />
    <slot name="head" />
  </head>
  <body class="bg-white text-slate-900 leading-normal tracking-normal w-4/5 md:max-w-3xl mx-auto">
    <slot name="main" />
    <Footer />
  </body>
</html>
